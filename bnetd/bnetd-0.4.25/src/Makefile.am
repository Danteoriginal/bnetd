uninstall-local: uninstall-sbin uninstall-bin uninstall-man uninstall-conf uninstall-share

.PHONY: uninstall-sbin
uninstall-sbin:
	@list='${SBINS}'; for p in $$list; do \
	  ${ECHO} "  ${RMF} ${sbindir}/$$p"; \
	  ${RMF} ${sbindir}/$$p; \
	done

.PHONY: uninstall-bin
uninstall-bin:
	@list='${BINS}'; for p in $$list; do \
	  ${ECHO} "  ${RMF} ${bindir}/$$p"; \
	  ${RMF} ${bindir}/$$p; \
	done

.PHONY: uninstall-man
uinstall-man:
	@list='${MAN1S}'; for p in $$list; do \
	  ${ECHO} "  ${RMF} ${mandir}/man1/$$p"; \
	  ${RMF} ${mandir}/man1/$$p; \
	done
	@list='${MAN5S}'; for p in $$list; do \
	  ${ECHO} "  ${RMF} ${mandir}/man5/$$p"; \
	  ${RMF} ${mandir}/man5/$$p; \
	done

